<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#43000000" />
        </shape>
    </item>

    <!-- Inner Circle -->
    <item android:top="3dp"
        android:right="3dp"
        android:bottom="3dp"
        android:left="3dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>
