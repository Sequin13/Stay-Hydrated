<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#F1F1F1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape"/>
    <TextView
        android:textStyle="italic"
        android:textSize="25dp"
        android:transitionName="splash_image"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:text="Welcome Back!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="wrap_content"
        android:transitionName="splash_text"
        android:layout_height="wrap_content"
        android:src="@drawable/login_draw"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/userName"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/input"
        android:textColor="@color/black"
        android:hint="Username"
        android:textColorHint="#808080"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/haselko"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/input"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="#808080"
        android:paddingLeft="20dp" />


    <Button
        android:id="@+id/register_button"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_btn"
        android:onClick="ButtonOnClick"
        android:text="Login" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dont't have an account?"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/signupClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="RegisterOnClick"
            android:text=" Sign up"
            android:textColor="#373D5E"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>