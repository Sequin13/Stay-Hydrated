<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="20sp"
                android:gravity="center" />

            <EditText
                android:id="@+id/editTextNumber2"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/plusik"
                android:layout_width="64dp"
                android:layout_height="89dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:onClick="plusClick"
                android:text="@string/plusik"
                android:textSize="50sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Przycisk 1"
                android:layout_marginRight="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Przycisk 2"
                android:layout_marginRight="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Przycisk 3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Przycisk 4"
                android:layout_marginEnd="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Przycisk 5"
                android:layout_marginEnd="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Przycisk 6"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Przycisk 4"
                android:layout_marginEnd="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Przycisk 5"
                android:layout_marginEnd="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Przycisk 6"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Przycisk 4"
                android:layout_marginEnd="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Przycisk 5"
                android:layout_marginEnd="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Przycisk 6"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Przycisk 4"
                android:layout_marginEnd="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Przycisk 5"
                android:layout_marginEnd="10dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Przycisk 6"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
